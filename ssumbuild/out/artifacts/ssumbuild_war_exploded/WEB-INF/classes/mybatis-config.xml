<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!--添加日志功能-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--配置数据源 交给Spring-->
    <typeAliases>
        <package name="pojo"/>
    </typeAliases>
    
    <mappers>
        <mapper class="dao.BookMapper"/>
    </mappers>
</configuration>